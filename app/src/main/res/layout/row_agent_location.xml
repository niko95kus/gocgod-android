<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.CardView style="@style/carbon_CardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_agentLocation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    app:carbon_cornerRadius="@dimen/carbon_cornerRadiusCard">

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <carbon.widget.TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="5dp"
                app:carbon_fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="20dp"/>

            <carbon.widget.TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="15dp"
                app:carbon_fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/carbon_red_600"/>

        </carbon.widget.LinearLayout>

        <carbon.widget.TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <carbon.widget.TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <carbon.widget.TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <carbon.widget.TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </carbon.widget.LinearLayout>
</carbon.widget.CardView>